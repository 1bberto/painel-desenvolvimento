@model IEnumerable<Painel.Models.PersonViewModel>

@{
    ViewData["Title"] = "Pessoas";
}

<h1>Pessoa</h1>

<p>
    <a class="btn btn-warning" asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Document)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Code">Editar</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Code">Detalhes</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Code">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>